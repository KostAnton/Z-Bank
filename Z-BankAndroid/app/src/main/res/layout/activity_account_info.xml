<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad_theme_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="100dp"
            android:layout_height="125dp"
            android:layout_weight="1"
            tools:srcCompat="@drawable/userdefault" />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nameDisplay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/ibm_plex_mono"
                android:gravity="center"
                android:letterSpacing="1.2"
                android:text="Anton \n Kost"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="20sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="100dp"
            android:layout_height="125dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/logo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/balanceDisplay"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:fontFamily="@font/ibm_plex_mono"
            android:gravity="center"
            android:text="Balance: 3521$"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/lastTransactionDisplay"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:fontFamily="@font/ibm_plex_mono"
            android:gravity="center"
            android:text="Last Transaction: \n 1000$ To Viki" />

        <TextView
            android:id="@+id/savingsDisplay"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:fontFamily="@font/ibm_plex_mono"
            android:gravity="center"
            android:text="Savings Balance: \n 1500$"
            android:textStyle="italic" />
    </LinearLayout>

    <Button
        android:id="@+id/addFriendBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16.8dp"
        android:backgroundTint="#344754"
        android:fontFamily="@font/ibm_plex_mono"
        android:text="A Friendly Transaction"
        android:textColor="#999696" />

    <Button
        android:id="@+id/settingsBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16.8dp"
        android:backgroundTint="#344754"
        android:fontFamily="@font/ibm_plex_mono"
        android:text="settings"
        android:textColor="#999696" />

</LinearLayout>