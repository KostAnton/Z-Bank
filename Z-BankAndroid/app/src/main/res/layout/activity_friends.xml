<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad_theme_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            tools:srcCompat="@drawable/userdefault"
            android:layout_width="100dp"
            android:layout_height="125dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/userdefault" />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="125dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nameDisplay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/ibm_plex_mono"
                android:gravity="center"
                android:text="Anton Kost"
                android:textColor="#344754"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/balanceTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/ibm_plex_mono"
                android:gravity="center"
                android:text="Balance: 350$"
                android:textColor="#BF344754"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/savingsTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/ibm_plex_mono"
                android:gravity="center"
                android:text="Savings: 200$"
                android:textColor="#80344754"
                android:textSize="10sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="100dp"
            android:layout_height="125dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/logo" />
    </LinearLayout>

    <ListView
        android:id="@+id/friendsList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/addFriendBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16.8dp"
        android:backgroundTint="#344754"
        android:fontFamily="@font/ibm_plex_mono"
        android:text="ADD A FRIEND"
        android:textColor="#999696" />
</LinearLayout>